<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="262dp"
        android:layout_height="93dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/mifondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="261dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/fondophone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="138dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_carlos_stars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="117dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondophonelogo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:fontFamily="@font/baloo"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Carlos Stars"
        android:textColor="#073b4c"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="384dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Ingrese sus credenciales para cotinuar"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtCountryCode"
        android:layout_width="165dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Código de país (+593)"
        android:inputType="textPersonName|phone"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="197dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="# Celular"
        android:inputType="textPersonName|phone"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/txtCountryCode"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="22dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCountryCode" />

    <EditText
        android:id="@+id/txtCedula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Número de Identificación (Cédula)"
        android:inputType="textPersonName|phone"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="373dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCedula" />

    <EditText
        android:id="@+id/txtReferencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Referencia: Ninguna, etc."
        android:inputType="textPersonName"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="385dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReferencia" />

    <EditText
        android:id="@+id/txtTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Monto a Cancelar ($00,00)"
        android:inputType="number"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/lblConTarifa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Cantidad con impuestos"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

    <EditText
        android:id="@+id/txtConTarifa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="$00,00"
        android:inputType="textPersonName"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblConTarifa" />

    <TextView
        android:id="@+id/lblSinTarifa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Cantidad sin impuestos"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConTarifa" />

    <EditText
        android:id="@+id/txtSinTarifa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="$00,00"
        android:inputType="textPersonName"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSinTarifa" />


    <TextView
        android:id="@+id/lblTarifa"
        android:layout_width="39dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal" />

    <EditText
        android:id="@+id/txtTarifa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Tarifa ($00,00)"
        android:inputType="number"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTarifa" />

    <Button
        android:id="@+id/btnPago"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="generartransaccion"
        android:text="Solicitar Pago"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtSinTarifa"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/txtSinTarifa"
        app:layout_constraintTop_toBottomOf="@+id/txtSinTarifa" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="calcular"
        android:text="CALCULAR"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnPago"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lblConTarifa"
        app:layout_constraintTop_toBottomOf="@+id/txtTarifa"
        app:layout_constraintVertical_bias="0.01" />


</androidx.constraintlayout.widget.ConstraintLayout>