<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="262dp"
        android:layout_height="93dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/mifondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/fondophone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="137dp"
        android:layout_height="135dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_carlos_stars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondophonelogo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:fontFamily="@font/baloo"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Carlos Stars"
        android:textColor="#073b4c"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Ingrese sus credenciales para cotinuar"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtCountryCode"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Código de país (+593)"
        android:inputType="textPersonName|phone"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="206dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="# Celular"
        android:inputType="textPersonName|phone"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textColorHighlight="#A61C1C"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/txtCountryCode"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/txtCedula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Número de Identificación (Cédula)"
        android:inputType="textPersonName|phone"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/txtReferencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Referencia: Ninguna, etc."
        android:inputType="textPersonName"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="312dp" />

    <EditText
        android:id="@+id/txtTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Monto a Cancelar ($00,00)"
        android:inputType="number"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="361dp" />

    <TextView
        android:id="@+id/lblConTarifa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Monto a pagar con tarifa"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

    <EditText
        android:id="@+id/txtConTarifa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="$00,00"
        android:inputType="textPersonName"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblConTarifa" />

    <TextView
        android:id="@+id/lblSinTarifa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:padding="8sp"
        android:paddingStart="8sp"
        android:text="Monto a pagar sin tarifa"
        android:textColor="#023047"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConTarifa" />

    <EditText
        android:id="@+id/txtSinTarifa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="$00,00"
        android:inputType="textPersonName"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSinTarifa" />


    <EditText
        android:id="@+id/txtTarifa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/text_imput"
        android:ems="10"
        android:hint="Tarifa ($00,00)"
        android:inputType="number"
        android:padding="8sp"
        android:paddingStart="25sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/btnPago"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="generartransaccion"
        android:text="Procesar Pago"
        android:textColorHighlight="#009688"
        android:textColorLink="#009688"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtSinTarifa"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/txtSinTarifa"
        app:layout_constraintTop_toBottomOf="@+id/txtSinTarifa" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="187dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="calcular"
        android:text="Solicitar Pago"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#009688"
        android:textColorLink="#009688"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnPago"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/lblConTarifa"
        app:layout_constraintTop_toBottomOf="@+id/txtTarifa"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>